+   ${c1}:111111111111iii;;;::,,${c2}........
+    ${c1}:tffffffffffffffffftttt1i;::,${c2}.....
+      ${c1}.11111ttttttfffffffffffftt1i:;,${c2}.....
+        .....,,,,,${c1}:::;;i11ttfffffffftt1;:,${c2}...
+            ..............,,${c1}:;i1ttffffffft1;:,${c2}.
+                  ...............${c1}:i1tffffffft1.${c2}.
+EOF
+            ;;
+
         "Solus"*)
             set_colors 4 7 1
             read -rd '' ascii_data <<'EOF'
