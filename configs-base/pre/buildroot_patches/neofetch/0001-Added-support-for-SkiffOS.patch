+            set_colors 7 4
+            read -rd '' ascii_data <<'EOF'
+${c2}
+                   ${c1}.,:,..${c2}
+             ${c1}.;1}1ttffttt11i:,${c2}
+            ${c1}:tfffffffffffftt1i;,${c2}
+ ${c2}...........${c1}:ii11tttffffffffft1;${c2}
+ ${c2}...................${c1}:;;i1ttff1;,${c2}
